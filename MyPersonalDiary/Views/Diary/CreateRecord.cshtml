@model MyPersonalDiary.Models.CreateRecordViewModel

@{
    ViewBag.Title = "Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">Create new record</div>
    @using (Html.BeginForm("CreateRecord", "Diary", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.ImageData)
        @Html.HiddenFor(m => m.ImageMimeType)
        <div class="panel-body">
            @Html.TextAreaFor(m=>m.Content, new { @class = "col-md-10, rows=30" })
            <div style='height: 0px;width:0px; overflow:hidden'>
                <input id="upfile" type="file" value="upload" name="Image" />
                <input id="create" type="submit" />
                <input id="reset" type="reset" />
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group-justified">
                <div id="attachBtn" class="fa fa-paperclip fa-lg btn btn-default"></div>
                <div id="attachCreate" class="fa fa-check fa-lg btn btn-default"></div>
                <div id="attachReset" class="fa fa-reply fa-lg btn btn-default"></div>
            </div>
        </div>
    }
</div>
<script>
        $(document).ready(
            function () {
                $("#attachBtn").click(function () { $("#upfile").click(); });
                $("#attachCreate").click(function () { $("#create").click(); });
                $("#attachReset").click(function () { $("#reset").click(); });
            });
</script>

