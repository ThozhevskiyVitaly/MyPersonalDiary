@model MyPersonalDiary.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<i class="fa fa-user" aria-hidden="true"></i> <label>Sign In</label>
<hr />
@using (Html.BeginForm("Login", "Diary", new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Логiн" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Пароль" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Log in" class="btn btn-primary" />
        </div>
    </div>
}
<hr />
