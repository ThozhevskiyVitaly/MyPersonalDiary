<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="~/Content/font-awesome.css" />
    <title>Account</title>
    @Styles.Render("~/Content/Account/css")
</head>
<body>
    <div class="header">
        <ul class="nav nav-tabs">
            <li>
                @Html.ActionLink(" ", "Login", "Diary", null, new { @class = "fa fa-sign-in fa-2x" })
            </li>
            <li>
                @Html.ActionLink(" ", "Register", "Diary", null, new { @class = "fa fa-registered fa-2x" })
            </li>
        </ul>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <br>
                <div id="content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <footer class="navbar-fixed-bottom">
        <span><b>&copy; 2017</b></span>
        <span><b>Thozhevskyy Vitaliy</b></span>
    </footer>
@Scripts.Render("~/bundles/Account/js")
</body>
</html>
